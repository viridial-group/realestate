<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logstash Appender (JSON) - Défini uniquement si LOGSTASH_ENABLED=true -->
    <!-- Note: La dépendance logstash-logback-encoder doit être disponible -->

    <!-- File Appender (optionnel, pour backup local) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH:logs}/${spring.application.name}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH:logs}/${spring.application.name}-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="${LOG_LEVEL_ROOT:INFO}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <!-- Logstash appender sera ajouté dynamiquement si disponible et LOGSTASH_ENABLED=true -->
    </root>

    <!-- Application Logger -->
    <logger name="com.realestate" level="${LOG_LEVEL_APP:DEBUG}"/>

    <!-- Spring Framework Logger -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="DEBUG"/>
    <logger name="org.springframework.security" level="DEBUG"/>

    <!-- Hibernate Logger -->
    <logger name="org.hibernate" level="INFO"/>
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- Kafka Logger -->
    <logger name="org.apache.kafka" level="INFO"/>
    <logger name="org.springframework.kafka" level="DEBUG"/>

    <!-- Elasticsearch Logger -->
    <logger name="org.elasticsearch" level="INFO"/>
    <logger name="org.springframework.data.elasticsearch" level="DEBUG"/>

    <!-- Reduce noise from some libraries -->
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>
    <logger name="org.springframework.boot.autoconfigure" level="INFO"/>
</configuration>

